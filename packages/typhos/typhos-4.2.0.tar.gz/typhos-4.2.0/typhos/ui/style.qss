TyphosBase {
   color: black;
   font: bold;
}

TyphosBase PyDMLineEdit {
    color: #A9A9A9;
}

TyphosBase PyDMLineEdit:focus {
    border-color: blue;
    color: black;
}

TyphosBase PyDMLabel {
    color: white;
    background-color: #0b3ae8;
    border-radius: 5px;
}

TyphosBase QComboBox {
    border-radius 10px;
    color: #A9A9A9;
}

TyphosBase QComboBox:on {
    color: black;
}

TyphosBase QComboBox QAbstractItemView {
    border: 2px solid #0b3ae8;
    border-radius 10px;
}

TyphosBase QComboBox:hover {
    border: 2px solid #0b3ae8;
}

TyphosBase QListWidget::item:selected {
    background-color: #0b3ae8;
    color: white;
}

TyphosBase QListWidget::item:!selected:hover {
    background-color: #A9A9A9;
}

TyphosBase PyDMLogDisplay > QPlainTextEdit {
    font: 10px normal;
}

SignalPanelRowLabel {
    font: 12px sans-serif;
}

TyphosTitleLabel {
    border: none;
    font: 16px bold serif;
}

TyphosTitleLabel:hover {
    border: 1px solid black;
}

QLineEdit#menu_action {
    border-width: 2px;
    border-style: outset;
    border-color: black;
}

TyphosLoading {
    color: red;
}

TyphosDisplayConfigButton > QMenu::item:default {
    color: darkgreen;
}

TyphosDisplayConfigButton > QMenu::separator {
}

QLabel#menu_template_section {
    font: bold;
    padding: 4 4 4 4px;
}

TyphosNotesEdit {
    background: transparent;
    color: black;
}

TyphosPositionerRowWidget > TyphosNotesEdit {
    background: transparent;
    color: black;
}
