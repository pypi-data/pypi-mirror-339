<odoo>
  <record id="ce_view_crm_case_opportunities_filter" model="ir.ui.view">
    <field name="name">ce.view.crm.opportunities.leads.filter</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
    <field name="arch" type="xml">
      <filter name="won" position="before">
        <filter
          name="is_key_submission"
          string="Key submission"
          domain="[('is_key_submission','=', True)]"
        />
        <filter
          name="key_submissions_target_reached"
          string="Target Key submissions reached"
          domain="[('key_submissions_target_reached','=', True)]"
        />
        <filter
          name="not_key_submissions_target_reached"
          string="Target Key submissions NOT reached"
          domain="[('key_submissions_target_reached','=', False)]"
        />
        <separator />
      </filter>
    </field>
  </record>

  <record id="view_cm_form_submission_form" model="ir.ui.view">
    <field name="name">cm.form.submission.form (key submissions)</field>
    <field name="model">crm.lead</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="community_maps.view_cm_form_submission_form"/>
    <field name="arch" type="xml">
      <field name="submission_type" position="after">
        <field name="is_key_submission" />
        <field name="key_submissions_target_reached" />
      </field>
    </field>
  </record>
</odoo>
