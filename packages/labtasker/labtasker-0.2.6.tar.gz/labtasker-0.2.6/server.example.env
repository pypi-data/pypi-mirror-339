DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=labtasker_db
DB_HOST=localhost
DB_PORT=27017
# Set to 'true' to expose MongoDB port for external tools (default: true)
EXPOSE_DB=true

# API settings
API_HOST=0.0.0.0
API_PORT=9321

# The length of the event queue
# Larger the value the better at handling burst of events
# but the more memory it will consume
EVENT_BUFFER_SIZE=100

# How often server send a ping to keep SSE connection alive
SSE_PING_INTERVAL=15.0

# How often check timeout (in seconds)
PERIODIC_TASK_INTERVAL=30

# ALLOW_UNSAFE_BEHAVIOR=true
