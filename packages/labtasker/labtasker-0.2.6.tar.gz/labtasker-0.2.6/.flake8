[flake8]
max-line-length = 88
extend-ignore = E203, E501, C901, E402, W503, F405
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    labtasker/client/core/cmd_parser/generated,
    labtasker/vendor
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F841,F811,F401,S101
    script_tests/*:F841,F811,F401,S101
max-complexity = 10
