#!/usr/bin/env python

import apollinaire.peakbagging.templates as templates
import importlib.resources
import numpy as np

def sing () :

  zone = importlib.resources.path (templates, 'zone.txt')
  with zone as filename :
    f = open (filename, 'r')
    lines = f.read ().splitlines ()
    ii = np.random.randint (0, len (lines))
    verse = lines[ii]
    print (verse)

if __name__ == '__main__' :

  sing ()

    
  
