<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">form hr.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="ssi_hr_employee.hr_employee_view_form" />
        <field name="arch" type="xml">
            <data>
                <xpath
                    expr="//field[@name='main_job_description_ids']"
                    position="after"
                >
                    <separator string="Extra" />
                    <field name="extra_job_description_ids" />
                </xpath>
            </data>
        </field>
    </record>

<record id="hr_employee_self_view_form" model="ir.ui.view">
    <field name="name">hr.employee - form</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="ssi_hr_employee.hr_employee_self_view_form" />
    <field name="arch" type="xml">
        <xpath expr="//field[@name='main_job_description_ids']" position="after">
            <separator string="Extra" />
            <field name="extra_job_description_ids" />
        </xpath>
    </field>
</record>
</odoo>
