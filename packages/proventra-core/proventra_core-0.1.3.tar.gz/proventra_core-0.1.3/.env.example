# Classification Model Configuration
CLASSIFICATION_MODEL_NAME=proventra/mdeberta-v3-base-prompt-injection
# e.g. "INJECTION"
CLASSIFICATION_MODEL_UNSAFE_LABEL=INJECTION

# LLM Configuration
# One of: google, anthropic, openai, mistral
LLM_PROVIDER=google
# Optional: Override default model for the chosen provider
LLM_MODEL_NAME=gemini-2.0-flash
# Optional: Override default temperature (0-1)
LLM_TEMPERATURE=0.1
# Use the one matching your LLM_PROVIDER
GOOGLE_API_KEY=your-google-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
MISTRAL_API_KEY=your-mistral-api-key

# Token Limits
# Default max tokens for the entire input to be sanitized
MAX_SANITIZATION_TOKENS=4096

# API Keys
API_KEY=your_api_key_here 

# Copy this file to .env and replace the placeholders with your actual values
# cp .env.example .env 