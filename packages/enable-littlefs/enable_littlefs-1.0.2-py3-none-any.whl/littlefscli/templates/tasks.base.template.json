[
  {
    "label": "üõ†Ô∏è Build firmware (app only)",
    "type": "shell",
    "command": "${SHELL}",
    "args": [
      "${COMMAND_FLAG}",
      "${EXPORT_WRAPPER} '${EXPORT_SCRIPT}'; idf.py build"
    ],
    "options": {
      "cwd": "${workspaceFolder}"
    },
    "group": {
      "kind": "build",
      "isDefault": true
    },
    "problemMatcher": []
  },
  {
    "label": "‚öôÔ∏è Build full (app + LittleFS)",
    "type": "shell",
    "command": "${SHELL}",
    "args": [
      "${COMMAND_FLAG}",
      "$env:LFS_BUILD='1'; ${EXPORT_WRAPPER} '${EXPORT_SCRIPT}'; idf.py build"
    ],
    "options": {
      "cwd": "${workspaceFolder}"
    },
    "group": {
      "kind": "build",
      "isDefault": false
    },
    "problemMatcher": []
  },
  {
    "label": "üí£ Flash firmware + todas las LFS",
    "type": "shell",
    "command": "${SHELL}",
    "args": [
      "${COMMAND_FLAG}",
      "${EXPORT_WRAPPER} '${EXPORT_SCRIPT}'; idf.py -p ${PORT} flash ${FLASH_ALL_LITTLEFS}"
    ],
    "options": {
      "cwd": "${workspaceFolder}"
    },
    "problemMatcher": []
  }
  
]
